    <form action="/updateWithId/:id" method="post">
      <input type="text" name="id" value="<%= data.id %>" hidden /><br />
      name: <input type="text" name="name" value="<%= data.name %>" /><br />
      deadline:
      <input type="date" name="deadline" value="<%= data.deadline %>" /> <br />
      points:
      <input type="number" name="points" value="<%= data.points %>" />

      <button type="submit">Edit</button>
    </form>
  </body>
